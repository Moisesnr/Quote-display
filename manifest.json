{
    "manifest_version": 3,
    "name": "Focus quote",
    "description": "Display a quote every time twitter tab is opened, to stop me from doomcrolling and motivate me.",
    "version": "1.0",
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "132": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icons": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "132": "images/icon-128.png"
        }
    },
    "permissions": [
        "tabs"
    ]
}